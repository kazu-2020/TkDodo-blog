<% content_for(:title, @event_data[:name]) %>

<style>
    .embed-event {
        height: <%= @height %>px;
        overflow: hidden;
        min-width: 240px;
    }

    @media (max-height: 250px) {
        .small\:hidden {
            display: none !important;
        }
    }

    @media (min-height: 251px) {
        .card\:hidden {
            display: none !important;
        }
    }

    /* <= 240px */
    @media only screen and (max-width: 240px) {
        .xxxs\:hidden {
            display: none !important;
        }
    }

    /* 241px - 464px */
    @media only screen and (min-width: 241px) and (max-width: 465px) {
        .xxs\:hidden {
            display: none !important;
        }
    }

    /* > 465px */
    @media only screen and (min-width: 465px) {
        .xs\:hidden {
            display: none !important;
        }
    }
</style>

