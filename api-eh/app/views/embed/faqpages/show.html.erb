<% content_for(:title, @faq_page_data[:name]) %>

<div class="embed embed-faqpage rounded-sm shadow-md text-white border border-gray-450">
  <a href="<%= @faq_page_data[:url] %>" target="_blank">
    <!-- - height:250px -->
    <div class="card:hidden h-full">
      <!-- < width:241px-->
      <div class="xxs:hidden xs:hidden flex flex-col justify-between h-full">
        <div class="grid grid-cols-12 gap-0 mb-auto">
          <div class="col-span-12 p-3">
            <div>
              <span class="text-xs line-clamp-1" style="color: <%= episode_series_primary_light %>"><%= episode_series_name %></span>
            </div>
            <div class="font-bold text-md line-clamp-2 mt-1"><%= @faq_page_data[:name] %></div>
            <div class="text-gray-350 text-sm line-clamp-3">
              <%= @faq_page_data[:description] %>
            </div>
          </div>

          <div class="col-span-12">
            <hr class="border-gray-350">
          </div>

          <div class="col-span-12 p-3 pb-0 questions">
            <%= render 'questions_list', take: 1, question_line: 2, answer_line: 3 %>
          </div>
        </div>
      </div>

      <!-- >= width:276px -->
      <div class="invisible xxs:visible flex flex-col justify-between h-full">
        <div class="grid grid-cols-12 gap-0 mb-auto">
          <div class="col-span-12 p-3">
            <div>
              <span class="text-xs line-clamp-1" style="color: <%= episode_series_primary_light %>"><%= episode_series_name %></span>
            </div>
            <div class="font-bold text-md line-clamp-1 mt-1"><%= @faq_page_data[:name] %></div>
            <div class="text-gray-350 text-sm line-clamp-3">
              <%= @faq_page_data[:description] %>
            </div>
          </div>

          <div class="col-span-12">
            <hr class="border-gray-350">
          </div>

          <div class="col-span-12 p-3 pb-0 questions">
            <%= render 'questions_list', take: 1, question_line: 1, answer_line: 1 %>
          </div>
        </div>
        <div class="p-3">
          <%= render 'shared/embed_footer' %>
        </div>
      </div>
    </div>

    <!-- >= height:251px -->
    <div class="small:hidden h-full">
      <!-- < width:241px-->
      <div class="xxs:hidden xs:hidden flex flex-col justify-between h-full">
        <div class="grid grid-cols-12 gap-0 mb-auto">
          <div class="col-span-12 p-3">
            <div>
              <span class="text-xs line-clamp-2" style="color: <%= episode_series_primary_light %>"><%= episode_series_name %></span>
            </div>
            <div class="font-bold text-lg line-clamp-2 mt-1"><%= @faq_page_data[:name] %></div>
            <div class="text-gray-350 text-sm line-clamp-3">
              <%= @faq_page_data[:description] %>
            </div>
          </div>

          <div class="col-span-12">
            <hr class="border-gray-350">
          </div>

          <div class="col-span-12 p-3 pb-0 questions">
            <%= render 'questions_list', take: 1, question_line: 2, answer_line: 3 %>
          </div>
        </div>
      </div>

      <!-- >= width:276px -->
      <div class="invisible xxs:visible flex flex-col justify-between h-full">
        <div class="grid grid-cols-12 gap-0 mb-auto">
          <div class="col-span-12 p-3">
            <div>
              <span class="text-xs line-clamp-1" style="color: <%= episode_series_primary_light %>"><%= episode_series_name %></span>
            </div>
            <div class="font-bold text-md line-clamp-1 mt-1"><%= @faq_page_data[:name] %></div>
            <div class="text-gray-350 text-sm line-clamp-3">
              <%= @faq_page_data[:description] %>
            </div>
          </div>

          <div class="col-span-12">
            <hr class="border-gray-350">
          </div>

          <div class="col-span-12 p-3 pb-0 questions">
            <%= render 'questions_list', take: 2, question_line: 1, answer_line: 1 %>
          </div>
        </div>
        <div class="p-3">
          <%= render 'shared/embed_footer' %>
        </div>
      </div>
    </div>
  </a>
</div>

<% content_for(:style) do %>
  <style>
      .embed-faqpage {
          height: <%= @height %>px;
          overflow: hidden;
          min-width: 240px;
      }

      @media (max-height: 250px) {
          .small\:hidden {
              display: none !important;
          }
      }

      @media (min-height: 251px) {
          .card\:hidden {
              display: none !important;
          }
      }
  </style>
<% end %>
