<div class="embed embed-series rounded-sm shadow-md text-white border border-gray-450">
  <a href="<%= @url %>" target="_blank">
    <div class="p-3 pb-2 grid grid-cols-12 gap-3 mb-auto" style="height: 158px;">
      <div class="col-span-5">
        <img
          decoding="async"
          src="<%= @playlist.eyecatch_image_url %>"
          class="rounded-sm"
          alt="<%= @playlist.name %>"/>
      </div>
      <div class="col-span-7">
        <div class="font-bold text-md mt-1 mb-2"><%= @playlist.name %></div>
        <div class="text-gray-350 text-xs mt-2 line-clamp-4">
          <%= @playlist.description %>
        </div>
      </div>
    </div>
    <%= render 'shared/embed_footer' %>
  </a>
</div>

<% content_for(:style) do %>
  <style>
      .embed-series {
          height: <%= @height %>px;
          overflow: hidden;
          min-width: 240px;
      }

      @media (max-height: 250px) {
          .small\:hidden {
              display: none !important;
          }
      }

      @media (min-height: 251px) {
          .card\:hidden {
              display: none !important;
          }
      }
  </style>
<% end %>
