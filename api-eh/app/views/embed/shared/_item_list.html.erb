<div class="embed embed-featured-item rounded-sm shadow-md text-white"
     data-controller="key-color"
     data-key-color-target="setBackgroundColor"
>
  <a href="<%= view_data.url %>" target="_blank">
    <div class="flex flex-col justify-between h-full">
      <div class="upper relative">
        <div class="upper--scrim"></div>
        <div>
          <img
            decoding="async"
            src="<%= view_data.base64_image_src %>"
            class="rounded-sm w-full object-cover"
            alt="<%= view_data.name %>"
            data-key-color-target="image"
            style="height: 80px;"/>
          <div class="pl-2 absolute top-12">
            <div class="font-bold text-sm mt-1 mb-2 w-54 line-clamp-1"><%= view_data.name %></div>
          </div>
        </div>
        <div class="bottom relative">
          <% if view_data.episodes.blank? %>
            <div class="flex h-full items-center justify-center">
              <small>エピソードがありません</small>
            </div>
          <% else %>
            <div class="episode-content w-full p-2 space-y-1">
              <% episodes = view_data.episodes %>
              <% episodes.each do |episode| %>
                <div class="episode-item-wrapper w-full relative">
                  <div class="episode-item-zabuton w-full h-14 rounded-sm shadow-sm" style="filter: brightness(0.7);border: 1px solid rgba(159, 159, 159, .2);"
                       data-key-color-target="setBackgroundColor" data-opacity="0.8"></div>
                  <div class="episode-item absolute top-0 z-10 w-full h-14 flex p-2 items-center">
                    <div class="w-16 flex-none">
                      <img
                        decoding="async"
                        src="<%= episode_image_src(episode) %>"
                        class="rounded-sm"
                        alt="<%= episode.dig(:name) %>"/>
                    </div>
                    <div class="ml-2 text-xs line-clamp-2"><%= episode.dig(:name) %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <% if @height.to_i > 250 %>
            <div class="footer p-3" style="position:relative; z-index: 10;">
              <%= render 'shared/embed_footer' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </a>
</div>

<% content_for(:style) do %>
  <style>
      .embed-featured-item {
          min-height: 150px;
          height: <%= @height %>px;
          overflow: hidden;
          width: 100%;
      }

      .upper--scrim {
          position: absolute;
          bottom: 0;
          left: 0;
          height: 50%;
          width: 100%;
          background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
      }

      .upper {
          height: 80px;
      }

      .episode-content {
          overflow: scroll;
          /* エピソードリストの高さ = 全体の高さ - upperの高さ - footerの高さ */
          height: <%= @height.to_i - 80 - (@height.to_i > 250 ? 56 : 0) %>px;
      }
  </style>
<% end %>
