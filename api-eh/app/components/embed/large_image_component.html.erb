<div class="embed embed-large-item rounded-sm shadow-md text-white">
  <a href="<%= url %>" target="_blank">
    <div class="image-wrapper">
      <img
        decoding="async"
        src="<%= episode_image_src(episode_data) %>"
        class="rounded-sm"
        alt="<%= episode_data[:name] %>"/>
    </div>
  </a>
</div>

<% content_for(:style) do %>
  <style>
      .embed-large-item {
          min-height: 210px;
          max-height: 482px;
          height: <%= height %>px;
          overflow: hidden;
          width: 100%;
          padding: 6px;
      }

      .embed-large-item .image-wrapper {
          max-width: 620px;
      }

      .mask-image {
          -webkit-mask-image: linear-gradient(#000 70%, rgba(0, 0, 0, .8) 80%, transparent 100%);
          mask-image: linear-gradient(#000 70%, rgba(0, 0, 0, .8) 80%, transparent 100%);
      }
  </style>
<% end %>
