{
    "family": "${APP_PREFIX}${ENV}-${APP_NAME}",
    "executionRoleArn": "${APP_PREFIX}${ENV}-${APP_NAME}_ecs",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/${APP_PREFIX}${ENV}-${APP_NAME}-app-role",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "rails",
            "image": "${CONTAINER_REGISTRY}/${APP_NAME}-app:${ENV}_${SHA1}",
            "cpu": 0,
            "memory": ${RAILS_MEMORY},
            "links": [],
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [],
            "command": [
                "/usr/src/app/bin/start_server.sh"
            ],
            "linuxParameters": {
                "capabilities": {},
                "devices": []
            },
            "environment": [
            ],
            "secrets": [
            ],
            "privileged": false,
            "readonlyRootFilesystem": false,
            "dnsServers": [],
            "dnsSearchDomains": [],
            "extraHosts": [],
            "dockerSecurityOptions": [],
            "pseudoTerminal": false,
            "dockerLabels": {},
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "${APP_PREFIX}${ENV}-${APP_NAME}-lg",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "rails"
                }
            }
        },
        {
            "name": "datadog-agent",
            "image": "datadog/agent:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8126,
                    "hostPort": 8126,
                    "protocol": "tcp"
                }
            ],
            "environment": [
            ],
            "secrets": [
            ]
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "${RAILS_CPU}",
    "memory": "${TOTAL_MEMORY}"
}
