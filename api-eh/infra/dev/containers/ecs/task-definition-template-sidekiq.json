{
    "family": "${APP_PREFIX}${ENV}-${CLUSTER_APP_NAME}",
    "executionRoleArn": "${APP_PREFIX}${ENV}-${CLUSTER_APP_NAME}_ecs",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/${APP_PREFIX}${ENV}-${CLUSTER_APP_NAME}-app-role",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "sidekiq",
            "image": "${CONTAINER_REGISTRY}/${APP_NAME}-app:${SHA1}",
            "cpu": 0,
            "memory": ${SIDEKIQ_MEMORY},
            "links": [],
            "essential": true,
            "entryPoint": [],
            "command": [
                "/usr/src/app/bin/start_sidekiq.sh"
            ],
            "linuxParameters": {
                "capabilities": {},
                "devices": []
            },
            "environment": [
            ],
            "secrets": [
            ],
            "privileged": false,
            "readonlyRootFilesystem": false,
            "dnsServers": [],
            "dnsSearchDomains": [],
            "extraHosts": [],
            "dockerSecurityOptions": [],
            "pseudoTerminal": false,
            "dockerLabels": {},
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "${APP_PREFIX}${ENV}-${CLUSTER_APP_NAME}-sidekiq-lg",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "sidekiq"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "ps aux | grep '[s]idekiq.*app' || exit 1"
                ],
                "interval": 30,
                "timeout": 10,
                "startPeriod": 10,
                "retries": 3
            },
            "stopTimeout": 120
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "${RAILS_CPU}",
    "memory": "${TOTAL_MEMORY}"
}
